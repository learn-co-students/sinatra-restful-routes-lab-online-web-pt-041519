<h1> Recipe Ingredients </h1>
<h2> <%= @recipe.ingredients %> </h2>

<form method="post" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="name" placeholder="Edit Name" value="<%=@recipe.name%>">
  <input type="text" name="ingredients" placeholder="Edit Ingredients" value="<%= @recipe.ingredients %>">
  <input type="text" name="cook_time" placeholder="Edit Cooktime" value="<% @recipe.cook_time %>">
  <input type="submit" value="submit">
</form>
