<form action="/recipes/<%= @recipe.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="PATCH"/>

    <label for="name">Name:</label></br>
    <input type="text" name="name" id="name" value="<%= @recipe.name %>"/></br>

    <label for="ingredients">Ingredients:</label></br>
    <input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"/></br>

    <label for="cook_time">Cook Time:</label></br>
    <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"/></br>

    <input type="submit" value="Submit"/>

</form>